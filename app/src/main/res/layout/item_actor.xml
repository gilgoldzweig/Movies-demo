<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actor_item_card_root"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="@dimen/_200sdp"
    android:layout_margin="@dimen/_6sdp"
    app:cardUseCompatPadding="true"
    android:elevation="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/actor_item_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/actor_item_profile_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_125sdp"
            android:layout_marginBottom="10dp"
            android:transitionName="@string/source_poster_transition" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/actor_item_real_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/actor_item_profile_image"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/_14ssp"
            android:transitionName="@string/source_title_transition"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:maxLines="2" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/actor_item_character_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/actor_item_real_name_text"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="@color/md_grey_600"
            android:textSize="@dimen/_10ssp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>