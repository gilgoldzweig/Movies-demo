<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actors_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gilgoldzweig.movies.fragments.details.TestFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/actors_fragment_rcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/actors_fragment_error_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_error_outline_black_36dp"
        android:visibility="gone"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/actors_fragment_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_25sdp"
        android:textColor="@color/md_black_1000"
        android:textSize="@dimen/_14ssp"
        android:text="@string/actors_not_found"
        android:visibility="gone"/>

</FrameLayout>
